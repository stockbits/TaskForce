{
  "compilerOptions": {
    /* ================================
       âœ… Core Settings
    ================================= */
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",        /* âœ… Vite 5 uses 'Bundler' */
    "jsx": "react-jsx",                   /* âœ… React 17+ JSX Transform */

    /* ================================
       âœ… Imports & Path Aliases
    ================================= */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@containers/*": ["A-Navigation_Container/*"],
      "@components/*": ["components/*"]
    },

    /* ================================
       âœ… TypeScript Behavior
    ================================= */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client"],            /* âœ… Gives access to import.meta.env */

    /* ================================
       âœ… Code Quality & Strictness
    ================================= */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,             /* ðŸ‘ˆ Optional: set false to reduce dev noise */
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },

  /* ================================
     âœ… Project Structure
  ================================= */
  "include": ["src"],                    /* Type-check only your app source */
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules", "dist"]
}
